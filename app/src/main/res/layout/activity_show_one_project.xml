<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".projects.ShowOneProjectActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewProjectNameDesc"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"
                android:background="@drawable/my_border"
                android:gravity="center"
                android:text="@string/projectName" />

            <TextView
                android:id="@+id/textViewProjectNameOne"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="4"
                android:textAlignment="gravity"
                android:gravity="center"
                android:background="@drawable/my_border"
                android:text="kgdjd"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textViewCityDesc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/my_border"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewCityZipCodeOne"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="50dp"
                android:background="@drawable/my_border"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textViewStreetDesc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/my_border"
                android:layout_height="50dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewStreetNumberOne"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="50dp"
                android:background="@drawable/my_border"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textViewPlotNumberDesc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/my_border"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewConfinePlotNUmberOne"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/my_border"
                android:layout_height="50dp"
                android:text="TextView" />
        </TableRow>
<TableRow>

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_round"
            android:text="Button" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:text="Button" />
</TableRow>
        <TableRow
            android:layout_marginTop="50dp">
        <Button
            android:id="@+id/buttonBackToMenuClient"
            android:layout_width="150dp"
android:layout_weight="1"
            android:layout_marginEnd="125dp"
            android:layout_marginStart="125dp"
            android:background="@drawable/edit_round"
            android:gravity="center"
            android:text="@string/backToMenu"
            android:textColor="@color/black"
            app:backgroundTint="@color/orange"
            tools:ignore="MissingConstraints" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>