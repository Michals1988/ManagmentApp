<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".projects.ProjectsMainPageActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/buttonActualProjects"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="240dp"
            android:background="@drawable/edit_round"
            android:textColor="@color/black"
            app:backgroundTint="@color/green"
            android:text="@string/actualProjects" />

        <Button
            android:id="@+id/buttonOldProjects"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/edit_round"
            android:textColor="@color/black"
            app:backgroundTint="@color/green"
            android:text="@string/oldProjects" />

        <Button
            android:id="@+id/buttonBackToMenuClient"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:text="@string/backToMenu"
            android:background="@drawable/edit_round"
            android:textColor="@color/black"
            app:backgroundTint="@color/orange"
            tools:ignore="MissingConstraints" />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>